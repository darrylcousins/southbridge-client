<article class="bb b--black-10">
  <div class="flex flex-column flex-row-ns pv4-ns">
    <div class="pr3-ns mb4 mb0-ns w-100 w-25-ns">
      <a class="db ph0-l no-underline black dim" href="{{ product.url | within: collection }}">
        <img src="{{ product.featured_image.src | img_url: 'large' }}"
             class="br2 ba b--black-50"
             alt="{{ product.featured_image.alt | escape }}">
        <p class="f5 lh-copy mv0 b black-50">{{ product.price | money }}</p>
      </a>
    </div>
    <div class="w-100 w-60-ns pl3-ns">
      <a class="db ph0-l no-underline black dim" href="{{ product.url | within: collection }}">
        <h2 class="f3 fw1 mt0 mb1 lh-title">{{ product.title }}</h2>
      </a>
      <p class="" name="box-content">
        {% comment %}
          Included products and buttons inserted here by collections.js
        {% endcomment %}
      </p>
      <script type="application/json" name="product-json">
{
"id": "{{ product.id }}",
"title": "{{ product.title }}",
"url": "{{ product.url }}"
}
      </script>
    </div>
  </div>
</article>
