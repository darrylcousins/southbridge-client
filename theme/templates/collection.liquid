{% paginate collection.products by 20 %}
  <h1>{{ collection.title }}</h1>
  <h1 class="tc fw4 tracked">{{ collection.title }}</h1>
  {% for product in collection.products %}
    {% if product.type == 'Container Box' %}
      {% include 'box-product-snippet' %}
    {% else %}
      <p>Gotta do something if not a container box</p>
    {% endif %}
  {% else %}
    <p>no matches</p>
  {% endfor %}
  {% if paginate.pages > 1 %}
    {{ paginate | default_pagination }}
  {% endif %}
{% endpaginate %}
